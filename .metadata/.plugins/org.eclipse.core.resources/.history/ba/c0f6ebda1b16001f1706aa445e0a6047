package negocio;

import java.time.LocalDateTime;
import java.util.List;

import datos.Dispositivo;
import datos.Evento;

public class EventoABM {
	public static EventoABM instance;
	
	private EventoABM() {};
	
	private static EventoABM getInstance() {
		if(instance == null) {
			instance = new EventoABM();
		}
		return instance;
	}
	
	public List<Evento> traer(){
		return EventoABM.getInstance().traer();
	}
	
	public List<Evento> traer(Dispositivo dispositivo, LocalDateTime fechaHora){
		return EventoABM.getInstance().traer(dispositivo, fechaHora);
	}
	
	public boolean agregar(String descripcion, Dispositivo dispositivo, LocalDateTime fechaHora) throws Exception{
		return EventoABM.getInstance().agregar(descripcion, dispositivo, fechaHora);
	}
	
	public List<Evento> traer(LocalDateTime fechaHoraDesde, LocalDateTime fechaHoraHasta){
		return EventoABM.getInstance().traer(fechaHoraDesde, fechaHoraHasta);
	}
	
}
